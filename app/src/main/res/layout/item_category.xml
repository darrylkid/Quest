<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvCategory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subject_height"
        app:cardCornerRadius="@dimen/no_radius"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_category_border"/>

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="@dimen/cardview_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text"
                android:background="@null"/>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>