<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Quest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/quest_primary</item>
        <item name="colorPrimaryDark">@color/quest_primary_dark</item>
        <item name="colorPrimaryVariant">@color/quest_primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/quest_secondary</item>
        <item name="colorSecondaryVariant">@color/quest_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@drawable/state_text_color_on_primary</item>
    </style>
</resources>